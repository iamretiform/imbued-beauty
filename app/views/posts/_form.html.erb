<%= form_with(model: post, local: true, url: blog_posts_path) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>
  <div class="field">
    <%= form.label :photo %><br>
    <%= form.file_field :photo %>
    <%= form.hidden_field :photo_cache %>
    <% if post.photo? %>
      <%= image_tag form.object.photo.thumb.url %>
      <%= form.label :remove_photo %>
      <%= form.check_box :remove_photo %>
    <% end %> 
  </div>  
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :post_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
